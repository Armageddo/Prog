<Window x:Class="ProgramowanieProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramowanieProjekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <Border Padding="10">
    <Grid>
            <TextBlock Text="Książka kucharska biednego studenta" FontStyle="Italic" FontWeight="Bold" TextAlignment="Center" FontSize="20" />

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Width="150" Grid.Row="0" Margin="0 20" Content="Losowy przepis" Click="OpenDisplayRandom" />
                <Button Width="150" Grid.Row="1" Margin="0 20" Content="Lista przepisów" Click="OpenList" />
                <Button Width="150" Grid.Row="2" Margin="0 20" Content="Dodaj przepis"  Click="OpenCreate"/>

            </Grid>
        </Grid>
    </Border>
</Window>
